@model IEnumerable<OrderManagementApp.Models.Order>

<h1>Orders</h1>
<a href="/Orders/Create" class="btn btn-primary">Create Order</a>
<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Total</td>
            </tr>
        }
    </tbody>
</table>