@model IEnumerable<OrderManagementApp.Models.Item>

<h1>Items</h1>

<a asp-action="Create" class="btn btn-success mb-3">Add New Item</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>
                    <img src="@item.ImageUrl" alt="@item.Name" style="width:100px; height:auto;" />
                </td>
            </tr>
        }
    </tbody>
</table>